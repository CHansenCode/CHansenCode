{
  "workbench.colorCustomizations": {
    "editor.foldBackground": "#ffffff00",
    "editor.selectionBackground": "#00f7ff23",
    "editor.lineHighlightBackground": "#ffffff00",
    "editor.lineHighlightBorder": "#00f7ff07",
    "editorLineNumber.foreground": "#ffffff13",
    "editorIndentGuide.activeBackground": "#696969",
    "editorIndentGuide.background": "#3a3a3a1c"
  },
  "files.exclude": {
    //  dep's
    "**/.git": true,
    "**/.next": true,
    "**/node_modules": true,

    //  settings
    "**/.gitignore": true,
    "**/.prettierrc": true,
    "**/.eslintrc.json": true,
    //  proj.Settings
    "**/package.json": true,
    "**/package-lock.json": true,
    "**/jsconfig.json": true,
    "**/next.config.js": true,

    //  others
    "**/middleware": true,
    "**/lib": false,
    "**/config": false,

    "**/standalone": true,

    "**/styles": true,
    "**/public": true,

    //  redux
    "**/actions": true,
    "**/reducers": true,

    //  compile
    "**/out": false
  }
}
